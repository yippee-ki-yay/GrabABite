<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col-md-8 col-md-offset-4">
        <h2>List of available managers</h2>
    </div>

    <div class="col-md-8 col-md-offset-2">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Restaurant</th>
       
          </tr>
        </thead>

        <tbody>
          <% @managers.each do |manager| %>
            <tr>
              <td><%= manager.firstname %></td>
              <td><%= manager.lastname %></td>
              <td><%= manager.email %></td>
              <td><%= manager.restaurant_id %></td>
            
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      <%= link_to 'New manager', new_manager_path %>
  </div>
</div>