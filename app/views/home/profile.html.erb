<div class="container">
	<div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="well well-sm">
          <%= form_for(@user) do |f| %>
          <fieldset>
            <legend class="text-center">Change user settings</legend>
    
            <!-- Name input-->
            <div class="form-group field">
              <label class="col-md-3 control-label" for="name"> First Name</label>
              <div class="col-md-9">
                  <%= f.text_field :name, class: "form-control" %>
              </div>
            </div>
    
            <!-- address input-->
            <div class="form-group field">
              <label class="col-md-3 control-label" for="address">Last name</label>
              <div class="col-md-9">
                  <%= f.text_field :address, class:"form-control" %>
                </div>
              </div>
              
              <!-- description input-->
            <div class="form-group field">
              <label class="col-md-3 control-label" for="address">Email</label>
              <div class="col-md-9">
                  <%= f.text_field :desc, class:"form-control" %>
                </div>
              </div>
            
             <div class="form-group field">
              <label class="col-md-3 control-label" for="address">Password</label>
              <div class="col-md-9">
                  <%= f.text_field :desc, class:"form-control" %>
                </div>
              </div>
            
             <div class="form-group field">
              <label class="col-md-3 control-label" for="address">Retype password</label>
              <div class="col-md-9">
                  <%= f.text_field :desc, class:"form-control" %>
                </div>
              </div>
            
         
    
            <!-- Form actions -->
            <div class="form-group actions">
              <div class="col-md-12 text-right">
                  <%= f.submit class:"btn btn-success"%>
              </div>
            </div>
          </fieldset>
          <% end %>
        </div>
          <%= link_to 'Back', restaurants_path %>
      </div>
	</div>
</div>