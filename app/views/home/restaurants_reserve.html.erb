<div class="row">
    <div class="col-md-8 col-md-offset-4">
        <h2>List of available restaurants</h2>
    </div>

    <div class="col-md-8 col-md-offset-2">
        <table class="table table-striped" id="restaurants">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Address</th>
          </tr>
        </thead>
        <tbody>
            <% @restaurants.each do |u| %>
            <tr class="info">
                <td><%= u.name %></td>
                <td><%= u.desc %></td>
                <td><%= u.address %></td>
                <% resrv =  "/reservation?id=" + u.id.to_s %>
                <td><a href="<%= resrv%>" class="btn btn-success reserve">Reserve</a></td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
</div>
