      <title>GrabABite</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'home', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

    <script>
        
        $(document).ready( function(){
             ;
         
              
          }); 
        
        //dump new friend
        $(document).on('click', '.dump_friend', function(){
              
             var row = $(this).closest("tr");
             var emailRow = row.find("td:nth-child(1)"); 
             
            $.ajax({
                  method: "POST",
                  url: "/home/dump_friend",
                  data: "email="+ emailRow.text()
                })
                  .done(function( msg ) 
                  {
                    if(msg == true)
                    {
                         row.hide();
                        $('#user_table_id tr:last').after("<tr class='success''>"+'<td>'
                                                          +emailRow.text()+'</td><td>' +
                                                          "<button class='btn btn-success add_friend'>Add friend</button></td></tr>");
                    }
                  });
            
        });
        
        //add your friend
         $(document).on('click', '.add_friend', function(){
              
             var row = $(this).closest("tr");
             var emailRow = row.find("td:nth-child(1)"); 
             
            $.ajax({
                  method: "POST",
                  url: "/home/add_friend",
                  data: "email="+ emailRow.text()
                })
                  .done(function( msg ) {
                    row.hide();
                    $('#friends_table_id tr:last')
                        .after(" <tr class='info'>"+
            '<td>'+emailRow.text()+'</td>'+
            '<td>'+emailRow.text()+'</td>'+
            '<td>'+emailRow.text()+'</td>'+
            "<td><button class='btn btn-danger dump_friend'>Dump</button></td></tr>");
                  });
            
        });
    
    </script>


