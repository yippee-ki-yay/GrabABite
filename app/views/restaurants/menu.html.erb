

<div class="row">
  <div class="col-md-4 well">
    <h3>Add Item to the menu</h3>
    <div class="form-group">
      <label>Name :</label>
      <input class="form-control" type="text" id="item_name" />
    </div>
     <div class="form-group">
      <label>Description :</label>
      <input class="form-control" type="text" id="item_desc" />
    </div>
     <div class="form-group">
      <label>Price :</label>
      <input class="form-control" type="number" id="item_price" />
    </div>
    <button class="btn btn-success" type="button" id="add_item">Add item</button>
  </div>
  
  <div class="col-md-6 col-md-offset-1 well">
    <h3>Restaurant menu</h3>
    <table class="table table-striped" id="item_table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @menu.each do |item| %>
        <tr>
              <td><%= item.name %></td>
              <td><%= item.desc %></td>
              <td><%= item.price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
</div>