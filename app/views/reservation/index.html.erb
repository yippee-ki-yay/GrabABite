

<div class="container">
    <div class="row">
    	<div class="col-md-4">
    		<div class="panel panel-default">
			  	<div class="panel-heading">
			    	<h3 class="panel-title">Reservation for restaurant: <b><%= @curr_restaurant.name %></b></h3>
			 	</div>
			  	<div class="panel-body">
                  <%= form_tag({controller: "reservation", action: "create"}, :id => "reserv", method: "post") %>
                    <fieldset>
                        <input type="hidden" id="restaurant_id", val="<%=@curr_restaurant.id %>">
                        
			    	  	<div class="form-group">
			    		    <input class="form-control" placeholder="Choose a date" id="date" name="date" type="datetime-local">
			    		</div>
			    		<div class="form-group">
			    			<input class="form-control" placeholder="Duration in hours" id="duration" name="duration" type="number" value="">
			    		</div>
			    	
			    		<button class="btn btn-lg btn-success btn-block" type="button" id="add_visit" value="Continue">
                          Continue
                      </button>
			    	</fieldset>
                   
			    </div>
			</div>
		</div>
 
    
  </div></div>