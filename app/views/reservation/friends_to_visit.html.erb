
<!--Information about the visits and current friends -->
<div class="row">
<div class="col-md-4">
    <div class="well">
      <input type="hidden" id="visit_id" val="<%= @visit.id %>">
      <h3>Information about your reservation</h3>
      <div class="form-group">
        <label>Date: <%= @visit.start_date.strftime("%Y-%m-%d %H:%M") %></label>
        </div>
      <div class="form-group">
        <label>duration: <%= @visit.duration.strftime("%H:%M") %></label>
      </div>
      <div class="form-group">
        <label>Table seats: <%= @visit.table.capacity %></label>
    </div>
      <div class="form-group">
        <label>People who are going: </label>
        <ul>
        <li id="user_list">You</li>
        </ul>
      </div>
      
      <a href="<%= visits_home_index_path  %>" class="btn btn-success" id="configuration">Finish reservation</a>
    
    </div>
  </div>
  
  <div class="col-md-6 col-md-offset-2">
    <div class="well">
      <h3>Add friends</h3>
    <table class="table" id="user_table_id">
    <thead>
      <tr>
        <th>Email</th>
        <th>First name</th>
        <th>Last name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |u| %>
        <tr class="success">
            <td><%= u.email %></td>
          <td><%= u.firstname %></td>
          <td><%= u.lastname %></td>
            <td><button class="btn btn-primary add_friend_visit">Add friend</button></td>
        </tr>
        <% end %>
    </tbody>
  </table>
  </div>
  </div>
</div>